<div class="ui small menu">
    <%= link_to "Home", root_path, class:"item"%>
    <%= link_to "Users", users_path, class:"item"%>
    <%= link_to "New Post", new_micropost_path, class:"item" if logged_in? %>
    <%= link_to "Posts", microposts_path, class:"item"%>
    <%= link_to "Map", map_path, class:"item"%>
  <div class="right menu">
    <% if logged_in? %>
      <div class="ui dropdown item">
        <%= "ADMIN" if current_user.admin? %>
        Profile <i class="dropdown icon"></i>
        <div class="menu">
          <%= link_to "Edit your profile", edit_user_path(current_user), class:"item" %>
        </div>
      </div>
      <div class="item">
          <%= link_to "Log out", logout_path, method: :delete, class:"ui button" %>
      </div>
    <% else %>
      <div class="item">
          <%= link_to "Log in", login_path, class:"ui primary button" %>
      </div>
   <% end %>
  </div>
</div>
